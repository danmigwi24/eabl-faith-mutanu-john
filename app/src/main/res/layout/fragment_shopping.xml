<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.ShoppingFragment"
    android:background="@color/lightGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_toolbar_shopping_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/customLayoutShoppingToolbar"/>

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/shoppingBar"
      android:layout_width="match_parent"
      android:layout_height="284dp"
          android:layout_marginTop="89dp"
      android:background="@drawable/shopping"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/cL">

          <TextView
              android:id="@+id/shopping2"
              android:layout_width="302dp"
              android:layout_height="86dp"
              android:text="Best Wines now discount up to 30%"
              android:textColor="@color/myWhite"
              android:textSize="32sp"
              android:textAlignment="center"
              android:layout_marginEnd="36dp"
              android:layout_marginStart="37dp"
              app:layout_constraintLeft_toLeftOf="@id/cL"
              app:layout_constraintRight_toRightOf="@id/cL"
              android:layout_marginTop="35dp"
              app:layout_constraintTop_toTopOf="@id/cL"
              android:textStyle="bold"
              android:textAllCaps="false"/>

          <TextView
              android:id="@+id/shoppingDes"
              android:layout_width="302dp"
              android:layout_height="42dp"
              android:text="Get the best wines ever made"
              android:textColor="@color/anotherGray"
              android:textSize="14sp"
              android:textAlignment="center"
              android:layout_marginEnd="36dp"
              android:layout_marginStart="37dp"
              app:layout_constraintLeft_toLeftOf="@id/cL"
              app:layout_constraintRight_toRightOf="@id/cL"
              android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@id/shopping2"
              android:textAllCaps="false"/>

          </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.appbar.AppBarLayout>

      <androidx.cardview.widget.CardView
          android:layout_width="302dp"
          android:layout_height="168dp"
          android:id="@+id/cardView12"
          android:layout_marginStart="36dp"
          android:layout_marginEnd="37dp"
          android:layout_marginTop="40dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:cardCornerRadius="16dp"
          app:layout_constraintTop_toBottomOf="@id/shoppingBar"
          app:cardBackgroundColor="@color/myWhite">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/conLayout11">

              <ImageView
                  android:id="@+id/sWine"
                  android:layout_width="56dp"
                  android:layout_height="75dp"
                  android:layout_marginTop="23dp"
                  android:src="@drawable/gold"
                  app:layout_constraintBottom_toTopOf="@id/sWine2"
                  app:layout_constraintLeft_toLeftOf="@id/conLayout11"
                  app:layout_constraintTop_toTopOf="@id/conLayout11" />

              <TextView
                  android:id="@+id/sWine2"
                  android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:background="@color/maroon"
                  android:text="View more details"
                  android:textAlignment="center"
                  android:paddingTop="10dp"
                  android:textColor="@color/myWhite"
                  app:layout_constraintBottom_toBottomOf="@id/conLayout11"
                  app:layout_constraintLeft_toLeftOf="@id/conLayout11"
                  app:layout_constraintRight_toRightOf="@id/conLayout11"/>

              <TextView
                  android:id="@+id/sWine3"
                  android:layout_width="150dp"
                  android:layout_height="50dp"
                  android:text="Vinest Gold Blanc 750ml"
                  android:textColor="@color/maroon"
                  android:layout_marginTop="17dp"
                  android:layout_marginEnd="68dp"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  app:layout_constraintTop_toTopOf="@id/conLayout11"
                  app:layout_constraintRight_toRightOf="@id/conLayout11"
                  />

              <TextView
                  android:id="@+id/sWine4"
                  android:layout_width="50dp"
                  android:layout_height="11dp"
                  android:text="*****"
                  android:layout_marginTop="8dp"
                  android:textColor="@color/yellow"
                  app:layout_constraintHorizontal_bias="0.163"
                  app:layout_constraintLeft_toRightOf="@id/sWine"
                  app:layout_constraintRight_toRightOf="@id/conLayout11"
                  app:layout_constraintTop_toBottomOf="@id/sWine3" />

              <TextView
                  android:id="@+id/sWine5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$275"
                  android:layout_marginTop="8dp"
                  android:textStyle="bold"
                  android:textColor="@color/maroon"
                  app:layout_constraintHorizontal_bias="0.163"
                  app:layout_constraintLeft_toRightOf="@id/sWine"
                  app:layout_constraintRight_toRightOf="@id/conLayout11"
                  app:layout_constraintTop_toBottomOf="@id/sWine4"/>

          </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="302dp"
          android:layout_height="168dp"
          android:id="@+id/cardView13"
          android:layout_marginStart="36dp"
          android:layout_marginEnd="37dp"
          android:layout_marginTop="40dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:cardCornerRadius="16dp"
          app:layout_constraintTop_toBottomOf="@id/cardView12"
          app:cardBackgroundColor="@color/myWhite">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/conLayout13">

              <ImageView
                  android:id="@+id/sWine6"
                  android:layout_width="56dp"
                  android:layout_height="75dp"
                  android:layout_marginTop="23dp"
                  android:src="@drawable/black"
                  app:layout_constraintBottom_toTopOf="@id/sWine7"
                  app:layout_constraintLeft_toLeftOf="@id/conLayout13"
                  app:layout_constraintTop_toTopOf="@id/conLayout13" />

              <TextView
                  android:id="@+id/sWine7"
                  android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:background="@color/maroon"
                  android:text="View more details"
                  android:textAlignment="center"
                  android:paddingTop="10dp"
                  android:textColor="@color/myWhite"
                  app:layout_constraintBottom_toBottomOf="@id/conLayout13"
                  app:layout_constraintLeft_toLeftOf="@id/conLayout13"
                  app:layout_constraintRight_toRightOf="@id/conLayout13"/>

              <TextView
                  android:id="@+id/sWine8"
                  android:layout_width="150dp"
                  android:layout_height="50dp"
                  android:text="Vinest Black Prime 750ml"
                  android:textColor="@color/maroon"
                  android:layout_marginTop="17dp"
                  android:layout_marginEnd="68dp"
                  android:textStyle="bold"
                  android:textSize="18sp"
                  app:layout_constraintTop_toTopOf="@id/conLayout13"
                  app:layout_constraintRight_toRightOf="@id/conLayout13"
                  />

              <TextView
                  android:id="@+id/sWine9"
                  android:layout_width="50dp"
                  android:layout_height="11dp"
                  android:text="*****"
                  android:layout_marginTop="8dp"
                  android:textColor="@color/yellow"
                  app:layout_constraintHorizontal_bias="0.163"
                  app:layout_constraintLeft_toRightOf="@id/sWine6"
                  app:layout_constraintRight_toRightOf="@id/conLayout13"
                  app:layout_constraintTop_toBottomOf="@id/sWine8" />

              <TextView
                  android:id="@+id/sWine10"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:text="$275"
                  android:textStyle="bold"
                  android:textColor="@color/maroon"
                  app:layout_constraintHorizontal_bias="0.15"
                  app:layout_constraintLeft_toRightOf="@id/sWine6"
                  app:layout_constraintRight_toRightOf="@id/conLayout13"
                  app:layout_constraintTop_toBottomOf="@id/sWine9" />

          </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>
      <ImageView
          android:id="@+id/tint5"
          android:layout_width="match_parent"
          android:layout_height="135dp"
          android:layout_marginTop="89dp"
          android:src="@drawable/tint"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

      <ProgressBar
          android:id="@+id/progressBar1"
          android:visibility="invisible"
          style="?android:attr/progressBarStyle"
          android:layout_width="80dp"
          android:layout_height="80dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>