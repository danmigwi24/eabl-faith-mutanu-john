<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.Shopping2Fragment"
    android:background="@color/lightGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_toolbar_shopping_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/customLayoutShopping2Toolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:text="Vinest Gold Blanc 750ml"
            android:textSize="24sp"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:layout_marginStart="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="91dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="74dp"
            android:layout_height="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            android:text="****"
            android:textColor="@color/yellow"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:text="7k Reviews"
            android:textColor="@color/black2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            android:layout_marginEnd="173dp"
            android:layout_marginTop="12dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="148dp"
            android:layout_height="79dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:cardBackgroundColor="@color/maroon"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="36dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conL">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ice"
                    android:text="Ice Wines"
                    android:textStyle="bold"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintLeft_toLeftOf="@id/conL"
                    app:layout_constraintRight_toRightOf="@id/conL"
                    app:layout_constraintTop_toTopOf="@id/conL"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catego"
                    android:text="Category"
                    android:textColor="@color/myWhite"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/conL"
                    app:layout_constraintRight_toRightOf="@id/conL"
                    app:layout_constraintTop_toBottomOf="@id/ice"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="148dp"
            android:layout_height="79dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:cardBackgroundColor="@color/maroon"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="36dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conL1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year"
                    android:text="1997"
                    android:textStyle="bold"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintLeft_toLeftOf="@id/conL1"
                    app:layout_constraintRight_toRightOf="@id/conL1"
                    app:layout_constraintTop_toTopOf="@id/conL1"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vintage"
                    android:text="Category"
                    android:textColor="@color/myWhite"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/conL1"
                    app:layout_constraintRight_toRightOf="@id/conL1"
                    app:layout_constraintTop_toBottomOf="@id/year"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardLay"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginTop="422dp"
            android:background="@drawable/round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/conL2">
                <TextView
                    android:layout_width="67dp"
                    android:layout_height="24dp"
                    android:id="@+id/product"
                    app:layout_constraintLeft_toLeftOf="@id/conL2"
                    android:text="Product"
                    android:textColor="@color/black2"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="87dp"
                    app:layout_constraintTop_toTopOf="@id/conL2"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="24dp"
                    android:id="@+id/specification"
                    app:layout_constraintLeft_toRightOf="@id/product"
                    android:text="Specification"
                    android:textColor="@color/black2"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="87dp"
                    app:layout_constraintTop_toTopOf="@id/conL2"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="67dp"
                    android:layout_height="24dp"
                    android:id="@+id/review"
                    app:layout_constraintLeft_toRightOf="@id/specification"
                    android:text="Reviews"
                    android:textColor="@color/black2"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="87dp"
                    app:layout_constraintTop_toTopOf="@id/conL2"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="299dp"
                    android:layout_height="91dp"
                    android:id="@+id/description"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="@id/conL2"
                    app:layout_constraintTop_toBottomOf="@id/specification"
                    android:layout_marginStart="38dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adi piscing elit. Duis tincidunt, diam nec gravida semper,
                     sapien enim tempor massa, in dapi bus libero est ac sapien."
                    android:textSize="14sp"
                    android:textColor="@color/black2"/>
                <TextView
                    android:layout_width="58dp"
                    android:layout_height="29dp"
                    android:id="@+id/pricing"
                    android:layout_marginStart="38dp"
                    android:text="$275"
                    app:layout_constraintLeft_toLeftOf="@id/conL2"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/maroon"
                    android:textSize="24dp"
                    android:textStyle="bold"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addToCartButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:background="@drawable/button"
                    android:text="Add to cart"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/myWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="38dp"
                    app:layout_constraintLeft_toLeftOf="@id/conL2"
                    app:layout_constraintRight_toRightOf="@id/conL2"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:layout_marginTop="76dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:id="@+id/wishlistButton1"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintRight_toRightOf="@id/conL2"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="38dp">

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/cardL">


                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:id="@+id/minus"
                        app:layout_constraintLeft_toLeftOf="@id/cardL"
                        android:text="-"
                        android:layout_marginTop="11dp"
                        app:layout_constraintTop_toTopOf="@id/cardL"
                        android:layout_marginStart="9dp"
                        android:textAlignment="center"
                        android:textColor="@color/black2"/>
                    <TextView
                    android:layout_width="7dp"
                    android:layout_height="22dp"
                    android:id="@+id/number"
                        android:layout_marginTop="9dp"
                        app:layout_constraintTop_toTopOf="@id/cardL"
                        android:layout_marginStart="17dp"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toRightOf="@id/minus"
                    android:text="1"
                    android:textColor="@color/black2"/>

                   <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/plus"
                    android:text="+"
                       android:layout_marginTop="11dp"
                       app:layout_constraintTop_toTopOf="@id/cardL"
                       android:layout_marginStart="16dp"
                       android:textAlignment="center"
                       app:layout_constraintLeft_toRightOf="@id/number"
                    android:textColor="@color/black2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="148dp"
            android:layout_height="79dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardLay"
            app:layout_constraintBottom_toTopOf="@id/cardLay"
            app:cardBackgroundColor="@color/maroon"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="36dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conL3">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Indonesia"
                    android:textAlignment="center"
                    android:textColor="@color/myWhite"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/conL3"
                    app:layout_constraintRight_toRightOf="@id/conL3"
                    app:layout_constraintTop_toTopOf="@id/conL3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/country1"
                    android:text="County"
                    android:textColor="@color/myWhite"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/conL3"
                    app:layout_constraintRight_toRightOf="@id/conL3"
                    app:layout_constraintTop_toBottomOf="@id/country"
                    android:layout_marginTop="8dp"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="73dp"
            android:layout_height="232dp"
            android:id="@+id/wineBottle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="168dp"
            android:src="@drawable/shopping2"
            android:layout_marginEnd="46dp"/>


        <ProgressBar
            android:id="@+id/progressBar1"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>