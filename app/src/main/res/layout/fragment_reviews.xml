<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.ReviewsFragment"
    android:background="@color/lightGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_toolbar_reviews_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/customLayoutReviewsToolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/containerCard"
        android:layout_width="345dp"
        android:layout_height="262dp"
        android:layout_margin="130dp"
        android:layout_marginTop="260dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/start1"
                android:layout_width="32dp"
                android:layout_height="32dp"
               android:layout_marginStart="64dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_star_outline_24"
                android:backgroundTint="@color/yellow"
                app:layout_constraintLeft_toLeftOf="@id/lay"
                app:layout_constraintTop_toTopOf="@id/lay" />

            <TextView
                android:id="@+id/start2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5pt"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_star_outline_24"
                android:backgroundTint="@color/yellow"
                app:layout_constraintLeft_toRightOf="@id/start1"
                app:layout_constraintTop_toTopOf="@id/lay" />

            <TextView
                android:id="@+id/start3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5pt"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_star_outline_24"
                android:backgroundTint="@color/yellow"
                app:layout_constraintLeft_toRightOf="@id/start2"
                app:layout_constraintTop_toTopOf="@id/lay" />
            <TextView
                android:id="@+id/start4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5pt"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_star_outline_24"
                android:backgroundTint="@color/yellow"
                app:layout_constraintLeft_toRightOf="@id/start3"
                app:layout_constraintTop_toTopOf="@id/lay" />

            <TextView
                android:id="@+id/start5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5pt"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_star_outline_24"
                android:backgroundTint="@color/gray"
                app:layout_constraintLeft_toRightOf="@id/start4"
                app:layout_constraintTop_toTopOf="@id/lay" />


            <TextView
                android:id="@+id/reviewNumbers"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:text="7K Reviews"
                android:layout_marginStart="123dp"
                app:layout_constraintLeft_toLeftOf="@id/lay"
                android:textStyle="bold"
                android:textColor="@color/black2"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/start3"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/writeReviewsButton"
                android:layout_width="299dp"
                android:layout_height="64dp"
                android:background="@drawable/button"
                android:text="Write Reviews"
                android:textSize="18sp"
                android:textColor="@color/myWhite"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="@id/lay"
                app:layout_constraintRight_toRightOf="@id/lay"
                app:layout_constraintTop_toBottomOf="@id/reviewNumbers"
                android:layout_marginTop="35dp"/>
            
                 </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/reviewCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/maroon"
        app:cardCornerRadius="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/containerCard"
        app:layout_constraintTop_toTopOf="@id/containerCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numberReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textAlignment="center"
                android:textColor="@color/myWhite"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/con"
                app:layout_constraintRight_toRightOf="@id/con"
                app:layout_constraintTop_toTopOf="@id/con" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>






    <TextView
        android:id="@+id/krystal"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:text="Krystal Jung"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/good2"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:text="The wine was very sweet 
        if you have not visited this site please make a point of checking it out"
        android:textColor="@color/newGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/krystal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"/>
    <TextView
        android:id="@+id/month1"
        android:layout_width="144dp"
        android:layout_height="18dp"
        android:text="September 27, 2021"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/good2"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black1"/>

    <TextView
        android:id="@+id/star5"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/month1"
        app:layout_constraintTop_toBottomOf="@id/good2"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:drawableTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="38dp"/>
    <TextView
        android:id="@+id/star6"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star5"
        app:layout_constraintTop_toBottomOf="@id/good2"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:drawableTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/star7"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star6"
        app:layout_constraintTop_toBottomOf="@id/good2"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:drawableTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/star8"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star7"
        app:layout_constraintTop_toBottomOf="@id/good2"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:drawableTint="@color/yellow"
        android:backgroundTint="@color/yellow"
        android:layout_marginStart="5dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="302dp"
        android:layout_height="1dp"
        android:background="@color/newGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/month1"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"/>



    <TextView
        android:id="@+id/jessica"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:text="Jessica Jane"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerCard"
        android:layout_marginTop="30dp"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/good"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:text="The wine was very sweet
        if you have not visited this site please make a point of checking it out"
        android:textColor="@color/newGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jessica"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"/>
    <TextView
        android:id="@+id/month"
        android:layout_width="144dp"
        android:layout_height="18dp"
        android:text="September 30, 2021"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/good"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black1"/>

    <TextView
        android:id="@+id/star"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/month"
        app:layout_constraintTop_toBottomOf="@id/good"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:drawableTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="38dp"/>
    <TextView
        android:id="@+id/star1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star"
        app:layout_constraintTop_toBottomOf="@id/good"
        android:layout_marginTop="15dp"
        android:drawableTint="@color/yellow"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/star2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star1"
        app:layout_constraintTop_toBottomOf="@id/good"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:drawableTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/star3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintLeft_toRightOf="@id/star2"
        app:layout_constraintTop_toBottomOf="@id/good"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/ic_baseline_star_outline_24"
        android:drawableTint="@color/yellow"
        android:layout_marginStart="5dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="302dp"
        android:layout_height="1dp"
        android:background="@color/newGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/month"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/anna"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:text="Anna Cliare"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"/>



    <ProgressBar
        android:id="@+id/progressBar1"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>