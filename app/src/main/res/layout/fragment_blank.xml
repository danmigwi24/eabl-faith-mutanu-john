<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ViewWineFragment"
    android:background="@color/lightGray">

    <include layout="@layout/custom_toolbar_categories_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/customLayoutCategoriesToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/getWineBar"
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:layout_marginTop="89dp"
                android:background="@drawable/cta"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conLay">

                    <TextView
                        android:id="@+id/getWine"
                        android:layout_width="302dp"
                        android:layout_height="86dp"
                        android:text="Get the best wines ever made"
                        android:textColor="@color/myWhite"
                        android:textSize="32sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="36dp"
                        android:layout_marginStart="37dp"
                        app:layout_constraintLeft_toLeftOf="@id/conLay"
                        app:layout_constraintRight_toRightOf="@id/conLay"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toTopOf="@id/conLay"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                    <TextView
                        android:id="@+id/getWineDes"
                        android:layout_width="302dp"
                        android:layout_height="42dp"
                        android:text="Get the best wines ever made"
                        android:textColor="@color/anotherGray"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="36dp"
                        android:layout_marginStart="37dp"
                        app:layout_constraintLeft_toLeftOf="@id/conLay"
                        app:layout_constraintRight_toRightOf="@id/conLay"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/getWine"
                        android:textAllCaps="false"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="140dp"
                        android:layout_height="56dp"
                        android:id="@+id/viewAllProductsButton"
                        android:enabled="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button"
                        app:layout_constraintRight_toRightOf="@id/conLay"
                        app:layout_constraintLeft_toLeftOf="@id/conLay"
                        app:layout_constraintTop_toBottomOf="@id/getWineDes"
                        android:text="View All"
                        android:layout_marginTop="15dp"
                        android:textAllCaps="false"
                        android:textColor="@color/myWhite">

                    </androidx.appcompat.widget.AppCompatButton>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="142dp"
                android:layout_height="172dp"
                android:id="@+id/cardView9"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/getWineBar"
                app:cardBackgroundColor="@color/myWhite">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/conLayout3">

                    <ImageView
                        android:id="@+id/roseWine"
                        android:layout_width="71dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/rose"
                        app:layout_constraintBottom_toTopOf="@id/roseWine1"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout3"
                        app:layout_constraintRight_toRightOf="@id/conLayout3"
                        app:layout_constraintTop_toTopOf="@id/conLayout3" />

                    <TextView
                        android:id="@+id/roseWine1"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/maroon"
                        android:text="Rose Wines"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/myWhite"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout3"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout3"
                        app:layout_constraintRight_toRightOf="@id/conLayout3"/>

                    <TextView
                        android:id="@+id/roseWine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maroon"
                        android:text="99+ products"
                        android:textAlignment="center"
                        android:textColor="@color/anotherGray"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout3"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout3"
                        app:layout_constraintRight_toRightOf="@id/conLayout3"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="142dp"
                android:layout_height="172dp"
                android:id="@+id/cardView8"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/getWineBar"
                app:cardBackgroundColor="@color/myWhite">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/conLayout2">

                    <ImageView
                        android:id="@+id/sparklingWine"
                        android:layout_width="71dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/sparkling"
                        app:layout_constraintBottom_toTopOf="@id/sparklingWine2"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                        app:layout_constraintRight_toRightOf="@id/conLayout2"
                        app:layout_constraintTop_toTopOf="@id/conLayout2" />

                    <TextView
                        android:id="@+id/sparklingWine2"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/maroon"
                        android:text="Sparkling Wines"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/myWhite"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout2"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                        app:layout_constraintRight_toRightOf="@id/conLayout2"/>

                    <TextView
                        android:id="@+id/sparklingWine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maroon"
                        android:text="99+ products"
                        android:textAlignment="center"
                        android:textColor="@color/anotherGray"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout2"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                        app:layout_constraintRight_toRightOf="@id/conLayout2"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="142dp"
                android:layout_height="172dp"
                android:id="@+id/cardView10"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardView8"
                app:cardBackgroundColor="@color/myWhite">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/conLayout5">

                    <ImageView
                        android:id="@+id/magnumWine"
                        android:layout_width="71dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/magnum"
                        app:layout_constraintBottom_toTopOf="@id/magnumWine2"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout5"
                        app:layout_constraintRight_toRightOf="@id/conLayout5"
                        app:layout_constraintTop_toTopOf="@id/conLayout5" />

                    <TextView
                        android:id="@+id/magnumWine2"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/maroon"
                        android:text="Magnum Wines"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/myWhite"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout5"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout5"
                        app:layout_constraintRight_toRightOf="@id/conLayout5"/>

                    <TextView
                        android:id="@+id/magnumWine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maroon"
                        android:text="99+ products"
                        android:textAlignment="center"
                        android:textColor="@color/anotherGray"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout5"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout5"
                        app:layout_constraintRight_toRightOf="@id/conLayout5"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="142dp"
                android:layout_height="172dp"
                android:id="@+id/cardView11"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardView9"
                app:cardBackgroundColor="@color/myWhite">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/conLayout6">

                    <ImageView
                        android:id="@+id/desertWine"
                        android:layout_width="71dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/desert"
                        app:layout_constraintBottom_toTopOf="@id/desertWine2"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout6"
                        app:layout_constraintRight_toRightOf="@id/conLayout6"
                        app:layout_constraintTop_toTopOf="@id/conLayout6" />

                    <TextView
                        android:id="@+id/desertWine2"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/maroon"
                        android:text="Desert Wines"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/myWhite"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout6"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout6"
                        app:layout_constraintRight_toRightOf="@id/conLayout6"/>

                    <TextView
                        android:id="@+id/desertWine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maroon"
                        android:text="99+ products"
                        android:textAlignment="center"
                        android:textColor="@color/anotherGray"
                        app:layout_constraintBottom_toBottomOf="@id/conLayout6"
                        app:layout_constraintLeft_toLeftOf="@id/conLayout6"
                        app:layout_constraintRight_toRightOf="@id/conLayout6"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/tint3"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginTop="89dp"
                android:src="@drawable/tint"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvErrorResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:text="No Product Found"
                android:textAlignment="center"
                android:textColor="@color/maroon"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar1"
                android:visibility="invisible"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>