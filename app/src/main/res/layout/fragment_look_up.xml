<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NewUser.LookUpFragment"
    android:background="@color/lightGray">


    <TextView
        android:id="@+id/lookUpHeading"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:text="@string/look_up_heading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black1"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        app:lottie_rawRes="@raw/success"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/lookUpHeading">
    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/lookUpGuidance"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginTop="38dp"
        android:text="@string/look_up_guidance"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottie" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMember"
        android:layout_width="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_height="64dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:text="@string/look_up_button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lookUpGuidance" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNewMember"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button2"
        android:text="@string/look_up_button2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMember" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>