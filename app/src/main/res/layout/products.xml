<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/lightGray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="142dp"
        android:layout_height="172dp"
        android:id="@+id/cardView8"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/myWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/conLayout2">

            <ImageView
                android:id="@+id/sparklingWine"
                android:layout_width="71dp"
                android:layout_height="81dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/sparkling"
                app:layout_constraintBottom_toTopOf="@id/sparklingWine2"
                app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                app:layout_constraintRight_toRightOf="@id/conLayout2"
                app:layout_constraintTop_toTopOf="@id/conLayout2" />

            <TextView
                android:id="@+id/sparklingWine2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/maroon"
                android:text="Sparkling Wines"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/myWhite"
                app:layout_constraintBottom_toBottomOf="@id/conLayout2"
                app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                app:layout_constraintRight_toRightOf="@id/conLayout2"/>

            <TextView
                android:id="@+id/sparklingWine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/maroon"
                android:text="99+ products"
                android:textAlignment="center"
                android:textColor="@color/anotherGray"
                app:layout_constraintBottom_toBottomOf="@id/conLayout2"
                app:layout_constraintLeft_toLeftOf="@id/conLayout2"
                app:layout_constraintRight_toRightOf="@id/conLayout2"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>