<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExistingUser.passwrdCreationSuccessFragment"
    android:background="@color/lightGray">

    <TextView
        android:id="@+id/passwordSuccess"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/password_success"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textColor="@color/black2"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="120dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/success"
        android:id="@+id/successPassword"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordSuccess"
        android:layout_marginTop="46dp"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="117dp"/>


    <TextView
        android:id="@+id/loginSuccess"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:text="@string/you_can_login"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="71dp"
        app:layout_constraintTop_toBottomOf="@id/successPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="302dp"
        android:layout_height="64dp"
        android:id="@+id/dismissButton"
        android:background="@drawable/button"
        android:text="@string/dismiss_button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSuccess"
        app:layout_constraintVertical_bias="0.62" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>