<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.FiltersFragment"
    android:background="@color/lightGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_toolbar_filters_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/customLayoutFiltersToolbar"/>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:fillViewport="true">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginTop="99dp"/>



        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sort"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/suitable"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Most Suitable"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton1"
            app:layout_constraintTop_toBottomOf="@id/sort"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioButton1"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>



        <TextView
            android:id="@+id/reviews"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Reviews"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton2"
            app:layout_constraintTop_toBottomOf="@id/suitable"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/suitable"
            app:layout_constraintTop_toBottomOf="@id/sort"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/highestPrice"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Highest Price"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton3"
            app:layout_constraintTop_toBottomOf="@id/sort"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/reviews"
            app:layout_constraintTop_toBottomOf="@id/highestPrice"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/lowestPrice"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Lowest Price"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton4"
            app:layout_constraintTop_toBottomOf="@id/highestPrice"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>



        <RadioButton
            android:id="@+id/radioButton13"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desertWines"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/sparkWine"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Sparkling Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton13"
            app:layout_constraintTop_toBottomOf="@id/desertWines"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>


        <RadioButton
            android:id="@+id/radioButton14"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/sparkWine"
            app:layout_constraintTop_toBottomOf="@id/radioButton8"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/whiteWine"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="White Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton14"
            app:layout_constraintTop_toBottomOf="@id/redWines"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/newGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/reviews"/>


        <TextView
            android:id="@+id/categories"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:text="Categories"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12.5dp"/>

        <TextView
            android:id="@+id/wines"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Rose Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton5"
            app:layout_constraintTop_toBottomOf="@id/categories"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioButton5"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/desertWines"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Desert Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton6"
            app:layout_constraintTop_toBottomOf="@id/wines"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/wines"
            app:layout_constraintTop_toBottomOf="@id/categories"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/magnumWines"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Magnum Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton7"
            app:layout_constraintTop_toBottomOf="@id/categories"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/desertWines"
            app:layout_constraintTop_toBottomOf="@id/magnumWines"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/redWines"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="Red Wines"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton8"
            app:layout_constraintTop_toBottomOf="@id/magnumWines"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/newGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/whiteWine"/>

        <TextView
            android:id="@+id/netto"
            android:layout_width="59dp"
            android:layout_height="24dp"
            android:text="Netto"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/netto"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12.5dp"/>

        <TextView
            android:id="@+id/wines1"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="250 ml"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton9"
            app:layout_constraintTop_toBottomOf="@id/netto"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioButton9"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/desertWines1"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="500 ml"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton9"
            app:layout_constraintTop_toBottomOf="@id/wines1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/wines1"
            app:layout_constraintTop_toBottomOf="@id/netto"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/magnumWines1"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="750 ml"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton11"
            app:layout_constraintTop_toBottomOf="@id/netto"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"/>

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pinkDull"
            app:layout_constraintLeft_toRightOf="@id/desertWines1"
            app:layout_constraintTop_toBottomOf="@id/magnumWines1"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/redWines1"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:text="1000ml"
            android:textSize="14sp"
            android:textColor="@color/black2"
            app:layout_constraintLeft_toRightOf="@id/radioButton12"
            app:layout_constraintTop_toBottomOf="@id/magnumWines1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>


        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/newGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/redWines1"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="59dp"
            android:layout_height="24dp"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line4"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/buttonMinimum"
          android:layout_width="63dp"
          android:layout_height="36dp"
          android:text="$150"
          android:textColor="@color/maroon"
          android:textSize="18sp"
          android:background="@drawable/button1"
          app:layout_constraintTop_toBottomOf="@id/price"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginStart="36dp"
          android:layout_marginTop="21.5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMaximum"
            android:layout_width="63dp"
            android:layout_height="36dp"
            android:text="$500"
            android:textColor="@color/maroon"
            android:textSize="18sp"
            android:background="@drawable/button1"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintLeft_toRightOf="@id/buttonMinimum"
            android:layout_marginStart="65dp"
            android:layout_marginTop="21.5dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton2"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Submit"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonMaximum"
            android:layout_marginTop="80dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>




        <ProgressBar
            android:id="@+id/progressBar1"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>